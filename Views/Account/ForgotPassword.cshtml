@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="slds-grid slds-grid_align-center" style="margin-top: 40px;">
    <div class="slds-col slds-size_10-of-12 slds-medium-size_6-of-12 slds-large-size_4-of-12">
        <div class="c-box">
            <div class="c-box-title">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="c-box-content">
                <section>
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <h4>Enter your email.</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="slds-form-element">
                            <label class="slds-form-element__label" asp-for="Email"></label>
                            <div class="slds-form-element__control">
                                <input class="slds-input" asp-for="Email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="c-right" style="margin-top: 15px;">
                            <div>
                                <button type="submit" class="btn btn-default">Submit</button>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
            <!-- <div class="c-box-footer">
                Footer text
            </div> -->
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
