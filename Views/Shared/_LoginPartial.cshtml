@using Microsoft.AspNetCore.Identity
@using M33.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <div class="c-login-widjet">
            <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            <button type="submit" class="slds-button">Log out</button>
        </div>
    </form>
}
else
{
    <div class="c-login-widjet">
        <a asp-area="" asp-controller="Account" asp-action="Register" class="slds-button">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="slds-button">Log in</a>
    </div>
}
